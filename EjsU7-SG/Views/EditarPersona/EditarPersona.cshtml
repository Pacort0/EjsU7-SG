@model EjsU7_SG.Models.ViewModel.clsPersonaDepartamento


@Html.ActionLink("Lista de personas", "listadoPersonas", "Home")
@Html.ActionLink("Página Principal", "Index", "Home")
<!--Variable en la que elegimos la persona cuyos datos queremos editar-->
@{
    var modelo = Model.ListaDeptPersonas[0];
}
<!--Formulario-->
<div class="text-center">
    <form>
        <br />
        <br />
        <label>Nombre: </label>
        @Html.TextBoxFor(persona => modelo.Nombre)
        <br />
        <br />
        <label>Apellidos: </label>
        @Html.TextBoxFor(persona => modelo.Apellidos)
        <br />
        <br />
        <label for="departamentos">Departamento: </label>
        <select id="departamentos" name="departamentos">
            @{
                foreach (var departamento in Model.ListaDepartamentos)
                {
                    <option value="departamento">@departamento.NombreDepartamento</option>
                }   
            }
        </select>
        <br /><br />
        <button type="submit">Guardar</button>
    </form>
</div>

